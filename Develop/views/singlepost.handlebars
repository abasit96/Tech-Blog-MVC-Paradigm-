 <div class="post-container">
    <h3>{{post.title}}</h3>
    <p>{{post.content}}</p>

    <hr />
    <div class="post-footer">
          <h5>{{format_date post.date_created}}</h5>
          <h5>- {{post.user.name}}</h5>
    </div>
  </div>

<div class="post-container">
  <h3>Comments</h3>
  <ul>
    {{#each post.comments as |comment|}}
    <li>{{comment.comment}} - {{comment.user.name}}</li>
    <li>{{format_date comment.date_created}}</li>
    {{/each}}
    </div>
  </div>
  </ul>
</div>

  
  <div class="post-container">
     <form class="form new-comment-form">
      <div class="form-group">
        <label for="post-comment">Comment:</label> <br><br>
        <textarea class="form-input" rows="5" cols="80" id="post-comment" name="post-comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Comment</button>
      </div>
    </form>
  </div>


<script src="/js/singlepost.js"></script>

